#!/bin/bash
set -eufo pipefail

# p10k.zsh hash: {{ include "./.chezmoitemplates/p10k.zsh" | sha256sum }}

echo -e "\nCopying the p10k internal file for vault"
cp "$(chezmoi source-path)/.chezmoitemplates/p10k.zsh" "$ZSH/themes/powerlevel10k/internal/p10k.zsh"

echo -e "\nChanging chsh to zsh"
# Check if zsh is default
if [ "$SHELL" != "/bin/zsh" ]; then
  # Verifica se o zsh está instalado
  if which zsh > /dev/null 2>&1; then
    # Altera o shell padrão para zsh
    chsh -s $(which zsh)
    echo "Shell changed to ZSH"
  else 
    echo "ZSH NOT INSTALLED!"
  fi

else
  echo "ZSH is already default"
fi