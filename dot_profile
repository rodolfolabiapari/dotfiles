# if running bash
if [ -n "$BASH_VERSION" ]; then
    # include .bashrc if it exists
    if [ -f "$HOME/.bashrc" ]; then
        . "$HOME/.bashrc"
    fi
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/.local/bin" ] ; then
    PATH="$HOME/.local/bin:$PATH"
fi

# Set editor to nano if available, otherwise use vi
export EDITOR=vi

# Set LANG to UTF-8 for broader character support
export LANG=en_US.UTF-8

# Set PAGER to less for better man page viewing
export PAGER=less

# Enable history expansion
set -o history
